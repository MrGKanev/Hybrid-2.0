<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <title><%= htmlWebpackPlugin.options.config.metas.title %></title>
  <meta http-equiv="Content-Security-Policy" content="<%= htmlWebpackPlugin.options.config.metas.contentSecurityPolicy %>">
  <meta name="description" content="<%= htmlWebpackPlugin.options.config.metas.description %>">

  <!-- open graph http://ogp.me/ -->
  <meta property="og:title" content="<%= htmlWebpackPlugin.options.config.metas.ogTitle %>" />
  <meta property="og:type" content="<%= htmlWebpackPlugin.options.config.metas.ogType %>" />
  <meta property="og:url" content="<%= htmlWebpackPlugin.options.config.metas.ogUrl %>" />
  <meta property="og:image" content="<%= htmlWebpackPlugin.options.config.metas.ogImage %>" />
  <meta property="og:image:width" content="<%= htmlWebpackPlugin.options.config.metas.ogImageWidth %>" />
  <meta property="og:image:height" content="<%= htmlWebpackPlugin.options.config.metas.ogImageHeight %>" />

  <% if (htmlWebpackPlugin.options.config.metas.twitterSite || htmlWebpackPlugin.options.config.metas.twitterCreator) { %>
    <!-- twitter cards https://developer.twitter.com/en/docs/tweets/optimize-with-cards/guides/getting-started -->
    <meta name="twitter:card" content="summary" />
    <% if (htmlWebpackPlugin.options.config.metas.twitterSite) { %>
      <meta name="twitter:site" content="<%= htmlWebpackPlugin.options.config.metas.twitterSite %>" />
    <% } %>
    <% if (htmlWebpackPlugin.options.config.metas.twitterCreator) { %>
      <meta name="twitter:creator" content="<%= htmlWebpackPlugin.options.config.metas.twitterCreator %>" />
    <% } %>
  <% } %>

  <meta name="viewport" content="<%= htmlWebpackPlugin.options.config.metas.viewport %>">
  <meta name="format-detection" content="<%= htmlWebpackPlugin.options.config.metas.formatDetection %>">
  <meta name="msapplication-tap-highlight" content="<%= htmlWebpackPlugin.options.config.metas.tapHighlight %>">
  <meta name="theme-color" content="<%= htmlWebpackPlugin.options.config.metas.themeColor %>">

  <link rel="icon" type="image/x-icon" href="assets/icons/favicon.ico">
  <link rel="manifest" href="manifest.json">
  <!-- cordova.js required for cordova apps -->
  <script src="cordova.js"></script>

  <link href="build/main.css" rel="preload" as="style">
  <link href="build/polyfills.js" rel="preload" as="script">
  <link href="build/vendor.js" rel="preload" as="script">
  <link href="build/main.js" rel="preload" as="script">

</head>
<body>

  <!-- Ionic's root component and where the app will load -->
  <ion-app></ion-app>

  <script type="text/javascript">
    /* First CSS File */
    var giftofspeed = document.createElement('link');
    giftofspeed.rel = 'stylesheet';
    giftofspeed.href = 'build/main.css';
    giftofspeed.type = 'text/css';
    var godefer = document.getElementsByTagName('link')[0];
    godefer.parentNode.insertBefore(giftofspeed, godefer);
  </script>

  <!-- The polyfills js is generated during the build process -->
  <script src="build/polyfills.js"></script>
  <script src="build/vendor.js"></script>

  <!-- The bundle js is generated during the build process -->
  <script src="build/main.js"></script>

</body>
</html>
